<plugin>
   
   <extension
         point="org.eclipse.jdt.ui.javaElementFilters">
      <filter
            description="Hides ITDs that are generated by Spring Roo"
            enabled="true"
            id="com.springsource.roo.ide.ui.generatedItdFilter"
            name="%hideGeneratedITDsLabel"
            pattern="*_Roo_*.aj"
            targetId="org.eclipse.jdt.ui.PackageExplorer"></filter>
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.springframework.ide.eclipse.ui.views"
            class="org.springframework.ide.eclipse.roo.ui.internal.RooShellView"
            icon="icons/full/obj16/console_obj.png"
            id="com.springsource.sts.roo.ui.rooShellView"
            name="%rooShellViewLabel"
            restorable="true">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="com.springsource.sts.roo.ui.actions.nonRooProject">
        <menu
               label="Spring Tools"
               id="org.springframework.ide.eclipse.ui.tools">
            <separator
               name="group3">
            </separator>
         </menu> 
         <visibility>
             <not>
                 <objectState
                       name="nature"
                       value="com.springsource.sts.roo.core.nature">
                 </objectState>
             </not>
         </visibility>
         <action
               label="%popupMenus.addNature.label"
               class="org.springframework.ide.eclipse.roo.ui.internal.actions.AddRemoveNatureActionDelegate"
               enablesFor="+"
               menubarPath="org.springframework.ide.eclipse.ui.tools/group3"
               id="com.springsource.sts.roo.actions.addNature">
         </action>
      </objectContribution>
      
      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="com.springsource.sts.roo.ui.actions.rooProject">
		 <menu
               label="Spring Tools"
               id="org.springframework.ide.eclipse.ui.tools">
            <separator
               name="group3">
            </separator>
         </menu>
         <visibility>
            <objectState
                  name="nature"
                  value="com.springsource.sts.roo.core.nature">
            </objectState>
         </visibility>
         <action
               label="%popupMenus.removeNature.label"
               class="org.springframework.ide.eclipse.roo.ui.internal.actions.AddRemoveNatureActionDelegate"
               enablesFor="+"
               menubarPath="org.springframework.ide.eclipse.ui.tools/group3"
               id="com.springsource.sts.roo.actions.removeNature">
         </action>
      </objectContribution>
      
      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
             adaptable="true"
             id="com.springsource.sts.roo.ui.actions.rooShell">
  		 <menu
               label="Spring Tools"
               id="org.springframework.ide.eclipse.ui.tools">
            <separator
               name="group3">
            </separator>
         </menu>
         <visibility>
            <objectState
                  name="nature"
                  value="com.springsource.sts.roo.core.nature">
            </objectState>
         </visibility>
         <action
               class="org.springframework.ide.eclipse.roo.ui.internal.actions.OpenRooShellActionDelegate"
               enablesFor="+"
               id="com.springsource.sts.roo.ui.openRooShell"
               label="%openRooShellLabel"
               menubarPath="org.springframework.ide.eclipse.ui.tools/group3">
         </action>
         <action
				class="org.springframework.ide.eclipse.roo.ui.internal.actions.RooCommandWizardActionDelegate"
				enablesFor="1"
				id="com.springsource.sts.roo.ui.openCommandWizard"
				label="%openRooCommandWizardLabel"
                menubarPath="org.springframework.ide.eclipse.ui.tools/group3">
		 </action>
         <action
				class="org.springframework.ide.eclipse.roo.ui.internal.actions.RooAddOnManagerActionDelegate"
				enablesFor="1"
				id="com.springsource.sts.roo.ui.openAddOnManager"
				label="%openRooAddOnManagerLabel"
                menubarPath="org.springframework.ide.eclipse.ui.tools/group3">
		 </action>
      </objectContribution>
    </extension>
 
 	<extension point="org.eclipse.ui.actionSets">
		<actionSet label="%rooShellInplace.label"
			description="%rooShellInplace.content" 
			visible="false"
			id="com.springsource.sts.roo.ui.actionSet">
			<action
				definitionId="com.springsource.sts.roo.ui.shell.show"
				label="%rooShellInplace.label"
				class="org.springframework.ide.eclipse.roo.ui.internal.actions.OpenRooInplaceDialogActionDelegate"
				menubarPath="navigate/showIn"
				id="openInplace">
			</action>
		</actionSet>
	</extension>

	<extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension targetID="com.springsource.sts.ide.perspective">
			<actionSet id="com.springsource.sts.roo.ui.actionSet" />
		</perspectiveExtension>
	</extension>

	<extension point="org.eclipse.ui.commands">
		<command name="%rooShellInplace.label"
			description="%rooShellInplace.content"
			categoryId="org.eclipse.ui.category.navigate"
			id="com.springsource.sts.roo.ui.shell.show">
		</command>
	</extension>

	<extension point="org.eclipse.ui.bindings">
		<key sequence="CTRL+R"
			commandId="com.springsource.sts.roo.ui.shell.show"
			contextId="org.eclipse.ui.globalScope"
			schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" />
		<key platform="carbon" sequence="CTRL+R" commandId=""
			contextId="org.eclipse.ui.globalScope"
			schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" />
		<key platform="carbon" sequence="COMMAND+R"
			commandId="com.springsource.sts.roo.ui.shell.show"
			contextId="org.eclipse.ui.globalScope"
			schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" />
	</extension>
	
	<extension
         point="org.eclipse.ui.propertyPages">
      <page
            adaptable="true"
            category="org.springframework.ide.eclipse.ui.projectPropertyPage"
            class="org.springframework.ide.eclipse.roo.ui.internal.properties.RooInstallPropertyPage"
            id="com.springsource.roo.ui.projectPropertyPage"
            name="%projectPropertyPage"
            objectClass="org.eclipse.core.resources.IProject">
         <filter
               name="nature"
               value="com.springsource.sts.roo.core.nature">
         </filter>
         <keywordReference
               id="com.springsource.sts.roo.ui.keywords">
         </keywordReference>
      </page>
   </extension>
   
     <extension point="org.eclipse.ui.keywords">
         <keyword id="com.springsource.sts.roo.ui.keywords"
            label="%preferenceKeywords.label"/>
    </extension>
   
    <extension point="org.eclipse.ui.preferencePages">
	 	<page
         category="org.springsource.ide.eclipse.commons.preferencePage"
         class="org.springframework.ide.eclipse.roo.ui.internal.properties.RooInstallPreferencePage"
         id="com.springsource.sts.roo.ui.preferencePage"
         name="%projectPropertyPage">
   		</page>
   	</extension>
   	
   	<extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="false"
            category="org.springframework.ide.eclipse.beans.ui.wizards.category"
            class="org.springframework.ide.eclipse.roo.ui.internal.wizard.NewRooProjectWizard"
            finalPerspective="com.springsource.sts.ide.perspective"
            hasPages="true"
            icon="icons/full/obj16/new_project_obj.png"
            id="com.springsource.sts.roo.ui.wizard.newRooProjectWizard"
            name="Spring Roo Project"
            preferredPerspectives="com.springsource.sts.ide.perspective"
            project="true">
      </wizard>
   </extension>
   
   <extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension 
				targetID="org.eclipse.jdt.ui.JavaPerspective">
			<newWizardShortcut id="com.springsource.sts.roo.ui.wizard.newRooProjectWizard"/>					
	    </perspectiveExtension>
		<perspectiveExtension 
				targetID="org.eclipse.jdt.ui.JavaBrowsingPerspective">
			<newWizardShortcut id="com.springsource.sts.roo.ui.wizard.newRooProjectWizard"/>					
	    </perspectiveExtension>
		<perspectiveExtension 
				targetID="org.eclipse.jdt.ui.JavaHierarchyPerspective">
			<newWizardShortcut id="com.springsource.sts.roo.ui.wizard.newRooProjectWizard"/>					
	    </perspectiveExtension>
		<perspectiveExtension 
				targetID="org.eclipse.jst.j2ee.J2EEPerspective">
			<newWizardShortcut id="com.springsource.sts.roo.ui.wizard.newRooProjectWizard"/>					
	    </perspectiveExtension>
   </extension>
   
   <extension
           point="org.eclipse.m2e.core.projectConfigurators">
        <configurator
            class="org.springframework.ide.eclipse.roo.ui.internal.maven.RooProjectConfigurator"
            id="com.springsource.sts.roo.ui.maven.rooProjectConfigurator"
            name="Roo"
            secondaryTo="org.maven.ide.eclipse.ajdt.configurator">
        </configurator>
    </extension>
    
	<extension
			point="org.eclipse.m2e.core.lifecycleMappingMetadataSource">
	</extension>
   
    <extension
         point="org.eclipse.ui.navigator.navigatorContent">
		<commonFilter
        activeByDefault="true"
        class="org.springframework.ide.eclipse.roo.ui.internal.RooCommonNavigatorFilter"
        description="Hides ITDs that are generated by Spring Roo"
        id="com.springsource.roo.ide.ui.cn.generatedItdFilter"
        name="%hideGeneratedITDsLabel">                   			
  		</commonFilter>
	</extension>
	
	<extension
         point="org.eclipse.ui.navigator.viewer">
    	<viewerContentBinding viewerId="org.eclipse.ui.navigator.ProjectExplorer">
    		<includes>
            	<contentExtension pattern="com.springsource.roo.ide.ui.cn.*" />
	        </includes>
      	</viewerContentBinding>
	</extension>
 <extension
       point="org.eclipse.ui.startup">
    <startup
          class="org.springframework.ide.eclipse.roo.ui.internal.listener.RooEarlyStartup">
    </startup>
 </extension>
 <extension
       point="org.eclipse.ui.themes">
    <themeElementCategory
          id="com.springsource.sts.roo.ui.presentation"
          label="Spring Roo">
    </themeElementCategory>
    <colorDefinition
          categoryId="com.springsource.sts.roo.ui.presentation"
          id="com.springsource.sts.roo.ui.color.errorText"
          isEditable="true"
          label="Error Text"
          value="COLOR_RED">
       <description>
          Text color for errors and severe warnings.
       </description>
    </colorDefinition>
    <colorDefinition
          categoryId="com.springsource.sts.roo.ui.presentation"
          id="com.springsource.sts.roo.ui.color.promptText"
          isEditable="true"
          label="Prompt Text"
          value="COLOR_DARK_RED">
       <description>
          Text color for the prompt.
       </description>
    </colorDefinition>
    <colorDefinition
          categoryId="com.springsource.sts.roo.ui.presentation"
          id="com.springsource.sts.roo.ui.color.infoText"
          isEditable="true"
          label="Information Text"
          value="COLOR_DARK_GREEN">
       <description>
          Text color for information and standard output.
       </description>
    </colorDefinition>
    <colorDefinition
          categoryId="com.springsource.sts.roo.ui.presentation"
          id="com.springsource.sts.roo.ui.color.inputText"
          isEditable="true"
          label="Input Text"
          value="COLOR_BLACK">
       <description>
          Text color for user input.
       </description>
    </colorDefinition>
    <colorDefinition
          categoryId="com.springsource.sts.roo.ui.presentation"
          id="com.springsource.sts.roo.ui.color.shellBackground"
          isEditable="true"
          label="Shell Background"
          value="COLOR_WHITE">
       <description>
          Background color for the Roo shell.
       </description>
    </colorDefinition>
    <fontDefinition
          categoryId="com.springsource.sts.roo.ui.presentation"
          defaultsTo="org.eclipse.jface.textfont"
          id="com.springsource.sts.roo.ui.font.shellFont"
          isEditable="true"
          label="Shell Font">
       <description>
          The font for the Roo shell.
       </description>
    </fontDefinition>
    <colorDefinition
          categoryId="com.springsource.sts.roo.ui.presentation"
          id="com.springsource.sts.roo.ui.color.warningText"
          isEditable="true"
          label="Warning Text"
          value="COLOR_DARK_MAGENTA">
       <description>
          Text color for standard warnings.
       </description>
    </colorDefinition>
 </extension>
   	
</plugin>
